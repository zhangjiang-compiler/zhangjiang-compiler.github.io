{
  "name": "TailBliss",
  "version": "0.1.1",
  "description": "Hugo + Alpine.js + TailwindCSS",
  "main": "index.js",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "alpinejs": "^3.11.1",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.6.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.2.7"
  },
  "scripts": {
